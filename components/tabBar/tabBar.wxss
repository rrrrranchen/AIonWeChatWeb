/* components/tabBar/tabBar.wxss */
.tab-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-around;
    padding: 20rpx 0;
    background: white;
    border-top: 1rpx solid #eee;
    z-index: 100;
  }
  
  .tab {
    padding: 15rpx 30rpx;
    color: #666;
    border-radius: 50rpx;
  }
  
  .tab.active {
    background: rgba(102, 126, 234, 0.2);
    color: #667eea;
    font-weight: bold;
  }
  