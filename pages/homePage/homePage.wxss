/* pages/homePage/homePage.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
  padding-top: 60rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.content {
  flex: 1;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 20rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.username {
  font-size: 32rpx;
  color: white;
  font-weight: 500;
}

.welcome-text {
  text-align: center;
  margin-bottom: 60rpx;
}

.welcome-text text {
  font-size: 36rpx;
  color: white;
  font-weight: 500;
}

.course-section {
  margin-bottom: 60rpx;
}

.course-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 36rpx;
  color: white;
  font-weight: bold;
}

.course-count {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.course-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.course-item {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s ease;
}

.course-item:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.98);
}

.course-info {
  flex: 1;
}

.course-name {
  display: block;
  font-size: 32rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.course-desc {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.course-progress {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.course-status {
  margin-left: 20rpx;
}

.status-text {
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-text.active {
  background: rgba(76, 175, 80, 0.3);
  color: #4CAF50;
  border: 1rpx solid rgba(76, 175, 80, 0.5);
}

.status-text.inactive {
  background: rgba(158, 158, 158, 0.3);
  color: #9E9E9E;
  border: 1rpx solid rgba(158, 158, 158, 0.5);
}

.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 20rpx;
}

.empty-desc {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
}

.button-group {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.btn {
  padding: 30rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s ease;
}

.btn-primary {
  background: #4CAF50;
  color: white;
}

.btn-primary:active {
  background: #45a049;
  transform: scale(0.98);
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.btn-secondary:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.98);
}