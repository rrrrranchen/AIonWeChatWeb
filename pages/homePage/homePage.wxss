/* pages/homePage/homePage.wxss */
.container {
    min-height: 100vh;
    background: #ffffff; /* 改为白色背景 */
    padding: 20rpx 30rpx 0;
    box-sizing: border-box;
  }
  
  /* 顶部标签栏样式 */
  .tabs {
    display: flex;
    justify-content: space-around;
    padding: 20rpx 0;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50rpx;
    margin: 20rpx 0 30rpx;
    backdrop-filter: blur(10rpx);
  }
  
  .tab {
    padding: 15rpx 30rpx;
    color: rgba(255, 255, 255, 0.7);
    border-radius: 50rpx;
    transition: all 0.3s;
    font-size: 30rpx;
  }
  
  .tab.active {
    background: rgba(255, 255, 255, 0.2);
    color: white;
    font-weight: bold;
  }
  
  /* 内容区样式 */
  .swiper-container {
    height: calc(100vh - 180rpx - 100rpx);
    width: 100%;
    margin-bottom: 20rpx; 
  }
  
  .tab-content {
    height: 100%;
    width: 100%;
    padding-bottom: 120rpx;
  }
  .bottom-tabs {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    padding: 20rpx 30rpx;
    background: rgba(255, 255, 255, 0.9);
    border-top: 1rpx solid #eee;
    z-index: 100;
    display: flex;
    justify-content: space-around;
  }
  
  .bottom-tabs .tab {
    padding: 15rpx 30rpx;
    color: #666;
    border-radius: 50rpx;
  }
  
  .bottom-tabs .tab.active {
    background: rgba(102, 126, 234, 0.2);
    color: #667eea;
    font-weight: bold;
  }
  /* 首页内容样式 */
  .header-image {
    width: 100%;
    margin-bottom: 40rpx;
    border-radius: 16rpx;
  }
  .avatar {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    margin-bottom: 20rpx;
    border: 4rpx solid rgba(255, 255, 255, 0.3);
  }
  
  .username {
    font-size: 36rpx;
    color: white;
    font-weight: 500;
  }
  
  /* 课程列表样式 */
  .course-section {
    margin-bottom: 40rpx;
    background: #f8f8f8;
  }
  
  .course-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30rpx;
    padding: 15rpx 20rpx;
    background: #1167e9; /* 浅蓝色背景 */
    border-radius: 16rpx;
}
  .course-header .section-title {
    font-size: 36rpx;
    color: #dddfe0 !important; /* 深蓝色文字 */
    font-weight: bold;
}

.course-count {
    font-size: 26rpx;
    color: #dddfe0 !important; /* 灰色文字 */
}

  
  .course-count {
    font-size: 26rpx;
    color: rgba(255, 255, 255, 0.8);
  }
  
  .course-list {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
  }
  
  .course-item {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 16rpx;
    padding: 30rpx;
    backdrop-filter: blur(10rpx);
    border: 1rpx solid rgba(255, 255, 255, 0.2);
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: all 0.3s ease;
    border: 4rpx solid #e0e0e0;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  }
  
  .course-item:active {
    background: rgba(255, 255, 255, 0.2);
    transform: scale(0.98);
  }
  
  .course-info {
    flex: 1;
  }
  
  .course-name {
    display: block;
    font-size: 32rpx;
    color: white;
    font-weight: bold;
    margin-bottom: 10rpx;
  }
  
  .course-desc {
    display: block;
    font-size: 26rpx;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 10rpx;
    line-height: 1.4;
  }
  
  .course-progress {
    display: block;
    font-size: 24rpx;
    color: rgba(255, 255, 255, 0.7);
  }
  
  .course-status {
    margin-left: 20rpx;
  }
  
  .status-text {
    padding: 8rpx 16rpx;
    border-radius: 20rpx;
    font-size: 24rpx;
    font-weight: 500;
  }
  
  .status-text.active {
    background: rgba(76, 175, 80, 0.1);
    color: #4CAF50;
    border: 1rpx solid rgba(76, 175, 80, 0.5);
  }
  
  .status-text.completed {
    background: rgba(33, 150, 243, 0.3);
    color: #2196F3;
    border: 1rpx solid rgba(33, 150, 243, 0.5);
  }
  
  /* 我的页面样式 */
  .user-card {
    display: flex;
    align-items: center;
    background: #f8f8f8;
    padding: 30rpx;
    border-radius: 20rpx;
    margin-bottom: 30rpx;
    backdrop-filter: blur(10rpx);
    border: 1rpx solid #eee;
  }
  
  .user-card .avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin-right: 30rpx;
  }
  
  .user-details {
    flex: 1;
  }
  
  .user-details .username {
    display: block;
    font-size: 36rpx;
    color: white;
    font-weight: bold;
    margin-bottom: 10rpx;
  }
  
  .action-list {
    background: rgba(255, 255, 255, 0.1);
    overflow: hidden;
    backdrop-filter: blur(10rpx);
  }
  
  .action-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx;
    border: 3rpx solid #ad9e9e;
    border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
    
  }
  
  .action-item:last-child {
    border-bottom: none;
    border: 3rpx solid #ad9e9e;
  }
  
  .action-item text {
    font-size: 32rpx;
    color: white;
  }
  
  .action-item image {
    width: 40rpx;
    height: 40rpx;
  }
  
  /* 按钮和空状态样式 */
  .button-group {
    display: flex;
    flex-direction: column;
    gap: 30rpx;
    margin-top: 60rpx;
  }
  
  .btn {
    padding: 30rpx;
    border-radius: 50rpx;
    font-size: 32rpx;
    font-weight: 500;
    border: none;
    transition: all 0.3s ease;
    text-align: center;
  }
  
  .btn-primary {
    background: #4CAF50;
    color: white;
  }
  
  .btn-primary:active {
    background: #45a049;
    transform: scale(0.98);
  }
  
  .btn-secondary {
    background: rgba(255, 255, 255, 0.2);
    color: white;
    border: 2rpx solid rgba(255, 255, 255, 0.3);
  }
  
  .btn-secondary:active {
    background: rgba(255, 255, 255, 0.3);
    transform: scale(0.98);
  }
  
  .empty-state {
    text-align: center;
    padding: 80rpx 40rpx;
  }
  
  .empty-text {
    display: block;
    font-size: 32rpx;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 20rpx;
  }
  
  .empty-desc {
    display: block;
    font-size: 26rpx;
    color: rgba(255, 255, 255, 0.6);
  }
  
  /* 响应式调整 */
  @media (max-width: 480px) {
    .container {
      padding: 20rpx 20rpx 40rpx;
    }
    
    .tab {
      padding: 12rpx 20rpx;
      font-size: 28rpx;
    }
    
    .course-item {
      padding: 20rpx;
    }
  }
  .ai-assistant-btn {
    position: fixed;
    right: 30rpx;
    bottom: 150rpx;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    background: #1167e9; /* 使用与推荐课程相同的蓝色 */
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 40rpx;
    font-weight: bold;
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    z-index: 999;
  }
  
  .ai-assistant-btn text {
    margin-bottom: 6rpx; /* 微调问号位置 */
  }

  .recommend-section {
    margin: 40rpx 0;
    margin-top: 20rpx;
    background: #ffffff; /* 改为白色背景 */
    border-radius: 16rpx;
    padding: 30rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05); /* 调整阴影颜色 */
}
.recommend-section .section-title {
    color: #333; /* 深灰色文字 */
}
  .section-header {
    margin-bottom: 20rpx;
  }
  
  .section-title {
    font-size: 32rpx;
    color: white; /* 白色文字 */
    font-weight: bold;
  }
  
  .recommend-list {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
  }


.user-details .email {
    display: block;
    font-size: 26rpx;
    color: rgba(255, 255, 255, 0.6);
    margin-top: 5rpx;
}
.recommend-item {
    background: linear-gradient(155deg, #1167e9 70%, #ffffff 110%);
    border-radius: 12rpx;
    padding: 20rpx;
    transition: all 0.3s ease;
    margin-bottom: 20rpx; /* 增加卡片间距 */
}
  
  .recommend-name {
    display: block;
    font-size: 28rpx;
    color: white;
    font-weight: bold;
  }
  
  .recommend-desc {
    display: block;
    font-size: 24rpx;
    color: rgba(255, 255, 255, 0.8);
    margin: 8rpx 0;
  }
  
  .recommend-reason {
    display: block;
    font-size: 22rpx;
    color: #f0f1e5;
    font-style: italic;
  }

  .user-info .username,
.welcome-text text,
.course-header .section-title,
.course-header .course-count,
.course-name,
.course-desc,
.course-progress,
.user-details .name,
.user-details .username,
.user-details .email,
.action-item text {
  color: #333; /* 改为深色文字 */
}